            else {
                $.getJSON("/Student/CheckUsername?username=" + Username, function (data) {
                    $('#checking').hide();
                    if (data) {


                        $('#result').text("!! Username already exists in database").class("alert alert-danger");

                    }
                    else {
                        $('#result').text("Username is available !");
                    }
                });
            }

        });

    });
</script>


